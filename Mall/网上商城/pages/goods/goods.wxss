/* pages/goods/goods.wxss */
page {
  display: flex;
  flex-direction: column;
  background: #e7c3e2;
  color: #336699;
  height: 100%;
}

/* 推荐栏和商品栏 */
.tab {
  display: flex;
}

.tab-item {
  flex: 1;
  font-size: 10pt;
  text-align: center;
  line-height: 72rpx;
  border-bottom: 6rpx solid #eee;
}

.tab-item.active {
  color: #c25b5b;
  border-bottom-color: #c25b5b;
}

/* 搜索框 */
.ss {
  display: flex;
  justify-content: center;
  background-color: rgb(247, 247, 194);
}

.ss icon {
  justify-content: flex-end;
}

/* 秒杀 */
.ms {
  width: 100%;
  height: 300rpx;
  border: 1px solid #000;
}

/* 砍价 */
.kj {
  width: 100%;
  height: 300rpx;
  border: 1px solid #000;
}

/* 拼团 */
.pt {
  width: 100%;
  height: 200rpx;
  border: 1px solid #000;
}

.content>swiper {
  height: 100%;
}